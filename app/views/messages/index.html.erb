<p id="notice"><%= notice %></p>

<h1>List of Phone Messages</h1>

<table class="table">
  <thead>
    <tr>
      <th>For</th>
      <th>Date</th>
      <th>Time</th>
      <th>Caller name</th>
      <th>Caller of</th>
      <th>Phone number</th>
      <th>Phone message</th>
      <th>Call taker</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.for %></td>
        <td><%= message.date %></td>
        <td><%= message.time %></td>
        <td><%= message.caller_name %></td>
        <td><%= message.caller_of %></td>
        <td><%= message.phone_number %></td>
        <td><%= message.phone_message %></td>
        <td><%= message.call_taker %></td>
        <td><%= link_to 'Show', message %></td>
        <td><%= link_to 'Edit', edit_message_path(message) %></td>
        <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

