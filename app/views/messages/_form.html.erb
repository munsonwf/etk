<%= simple_form_for(@message) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :for %>
    <%= f.input :date %>
    <%= f.input :time %>
    <%= f.input :caller_name %>
    <%= f.input :caller_of %>
    <%= f.input :phone_number %>
    <%= f.input :phone_message %>
    <%= f.input :call_taker %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
