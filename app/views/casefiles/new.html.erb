<h1>Enter New Case</h1>

<%= simple_form_for(@casefile) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :client %>
    <%= f.input :matter %>
    <%= f.input :file_number %>
    <%= f.input :date_opened %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>


<%= link_to 'Back', casefiles_path %>
