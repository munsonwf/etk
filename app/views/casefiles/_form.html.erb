<%= simple_form_for(@casefile) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :client %>
    <%= f.input :matter %>
    <%= f.input :file_number %>
    <%= f.input :date_opened %>
    <%= f.input :date_closed %>
    <%= f.input :location %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
